{
	"type": "config",
	"id": "conf.service.minidlna",
	"title": "MiniDLNA",
	"queryinfo": {
		"xpath": "//services/minidlna",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": 0
		},
		"name": {
			"type": "string",
			"default": "MiniDLNA Server on OpenMediaVault"
		},
		"port": {
			"type": "integer",
            "minimum": 1,
			"maximum": 65535,
			"default": 8200
		},
		"strict": {
			"type": "boolean",
			"default": 0
		},
		"tivo": {
			"type": "boolean",
			"default": 0
		},
		"rootcontainer": {
			"type": "string",
            "default": "."
		},
		"loglevel": {
			"type": "string",
            "default": "error"
		},
		"extraoptions": {
			"type": "string"
		},
		"shares": {
			"type": "object",
			"properties": {
				"share": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"uuid": {
								"type": "string",
								"format": "uuidv4"
							},
							"sharedfolderref": {
								"type": "string",
								"format": "uuidv4"
							},
							"mtype": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
